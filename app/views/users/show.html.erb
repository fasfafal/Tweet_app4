<h2><%= @user.name %></h2> 
<p><%= @user.email %></p>
<% if @user.id == current_user.id %>
  <div><%= link_to "編集", edit_user_registration_path %></div>
<% end %>

<% @user.posts.each do |post| %>
    <%= link_to(post.user.name, "/users/#{post.user.id}") %>
    <%= link_to(post.content, "/posts/#{post.id}") %>
<% end %>
